<Window x:Class="DepartmentOfCommerceProject.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepartmentOfCommerceProject.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Grid HorizontalAlignment="Left" Height="50"  VerticalAlignment="Top" Width="794" Margin="-2,0,0,0">
            <Button HorizontalAlignment="Left" Margin="4,0,0,0" VerticalAlignment="Top" Width="42" Height="36" Background="{x:Null}" BorderBrush="Black">
                <Grid Height="32" Width="38">
                    <Image Margin="0,0,0,6" Source="/DepartmentOfCommerceProject;component/Resources/dashboard.png"/>
                    <TextBlock HorizontalAlignment="Left" Margin="0,26,0,0" TextWrapping="Wrap" Text="Рабочий Стол" VerticalAlignment="Top" Height="6" Width="38" FontSize="5" TextAlignment="Center"/>
                </Grid>
            </Button>
            <Button HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top" Width="42" Height="36" Background="{x:Null}" BorderBrush="Black">
                <Grid Height="32" Width="38">
                    <Image Margin="0,0,0,6" Source="/DepartmentOfCommerceProject;component/Resources/Images/catalog.png" Height="25"/>
                    <TextBlock HorizontalAlignment="Left" Margin="0,26,0,0" TextWrapping="Wrap" Text="Справочники" VerticalAlignment="Top" Height="6" Width="38" FontSize="5" TextAlignment="Center"/>
                </Grid>
            </Button>
            <Button HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Top" Width="42" Height="36" Background="{x:Null}" BorderBrush="Black">
                <Grid Height="32" Width="38">
                    <Image Margin="0,0,0,6" Source="/DepartmentOfCommerceProject;component/Resources/Images/purchase.png" Height="25"/>
                    <TextBlock HorizontalAlignment="Left" Margin="0,26,0,0" TextWrapping="Wrap" Text="Закупки" VerticalAlignment="Top" Height="6" Width="38" FontSize="5" TextAlignment="Center"/>
                </Grid>
            </Button>
        </Grid>
    </StackPanel>
</Window>
